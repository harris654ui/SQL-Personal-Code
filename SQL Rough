Declare
DepartmentID  VarChar2(50);
Begin
select department_id into DepartmentID
from hr.departments
where department_id = 20;
DBMS_OUTPUT.PUT_LINE(DepartmentID);
End;


Declare
DepartmentID  VarChar2(50);
DepartmentName VarChar2(50);
Begin

select department_id, department_name
into DepartmentID, DepartmentName
from hr.departments
where department_id = 20;


DBMS_OUTPUT.PUT_LINE(DepartmentID);

DBMS_OUTPUT.PUT_LINE(DepartmentName);
End;


Declare
EmployeeID  Varchar2(50);
DeparmentID  Varchar2(50);

Begin

EmployeeID:= 100;

SELECT department_id into DeparmentID
from hr.employees
where employee_ID= EmployeeID;

DBMS_OUTPUT.PUT_LINE(EmployeeID);
DBMS_OUTPUT.PUT_LINE(DeparmentID);
End;


Declare
DepartmentID VarChar2(100);
DepartmentName VarChar2(100);


Begin

SELECT d.deparment_id,d.department_name into DepartmentID,DepartmentName 
From hr.departments d
Join hr.employees e 
on d.deparment_id = e.deparment_id
where e.employee_id = 101;


DBMS_OUTPUT.PUT_LINE(DepartmentName );
DBMS_OUTPUT.PUT_LINE(DeparmentID);


End;


