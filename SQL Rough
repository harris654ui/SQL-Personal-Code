begin
    for e in(select emp.first_name,d.department_name from hr.employees emp
             join hr.departments d
             on emp.department_id = d.department_id)loop 
        DBMS_OUTPUT.PUT_LINE(e.first_name ||' works in '||e.department_name);
    end loop;
end;



begin
    for e in(select count(employee_id) count from hr.employees
              group by department_id)loop 
        DBMS_OUTPUT.PUT_LINE(e.count || " "|| e.department_id);
    end loop;
end;


begin
    for e in(select count(employee_id) as countn, department_id from hr.employees
              group by department_id)loop 
        DBMS_OUTPUT.PUT_LINE(e.countn ||' '|| e.department_id);
    end loop;
end;
Find the position of @ in the string.
select '  Hel#lo! H@rri$.**' as Str,
instr('  Hel#lo! H@rri$.**','@') as "Position of @"
from dual;

Extract the substring from position 5 to 10.



Pad the string to length 30 with # on the left.
select '  Hel#lo! H@rri$.**' as Str,
LPAD('  Hel#lo! H@rri$.**',30,'%')
FROM DUAL;


Pad the string to length 30 with * on the right.

select '  Hel#lo! H@rri$.**' as Str,
RPAD('  Hel#lo! H@rri$.**',30,'%')
FROM DUAL;

Remove all special characters (anything that is not a letter or number) using regex
select '  Hel#lo! H@rri$.**' as Str,



select first_name,last_name,salary, 
case
when salary > 10000 then 'High'
when salary >=5000 and salary <=10000 then 'Medium'
else 'Low'
END as "SAl"
from hr.employees;

select department_id,department_name,
case
when location_id = 1400 then 'US Based Location'
else 'Other Regions'
end case
from hr.departments
where location_id = 1400;


