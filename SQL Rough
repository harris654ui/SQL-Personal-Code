Declare

salary int;
firstname Varchar2(100);

Begin

select salary,first_name 
into salary,firstname
from hr.employees;

DBMS_OUTPUT.PUT_LINE(firstname);
DBMS_OUTPUT.PUT_LINE(salary );
End;


Declare

salary int;
firstname Varchar2(100);
departmentname Varchar2(100);

Begin

select e.salary,e.first_name ,d.department_name
into salary,firstname,departmentname
from hr.employees e
join hr.departments d
on e.department_id = d.department_id
where e.employee_id = 103;



DBMS_OUTPUT.PUT_LINE(firstname);
DBMS_OUTPUT.PUT_LINE(salary );
DBMS_OUTPUT.PUT_LINE(departmentname);
End;


Declare
firstname hr.employees.first_name%TYPE;
departmentid hr.departments.department_id%TYPE;
locationcity hr.locations.city%TYPE;
employeeid hr.employees.employee_id%TYPE;


Begin

employeeid := 103;

select e.first_Name,d.department_id,l.city
into firstname,departmentid,locationcity
from hr.employees e
join hr.departments d
on e.department_id = d.department_id
join hr.locations l
on d.location_id = l.location_id
where e.employee_id = employeeid;

DBMS_OUTPUT.PUT_LINE('Employee Name: ' || firstname);
DBMS_OUTPUT.PUT_LINE('Department ID: ' || departmentid);
DBMS_OUTPUT.PUT_LINE('Location: ' || locationcity);

End;

declare

num number:= 5;

Begin
    loop
        dbms_output.put_line(num);
        num:= num * 5;
        
        exit when num>50;
    end loop;
end;

